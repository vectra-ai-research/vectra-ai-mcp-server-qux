# Vectra AI On-Premise MCP Server Configuration

# Vectra On-Premise API Configuration
VECTRA_BASE_URL=https://your-vectra-instance.com
VECTRA_API_KEY=your_api_key_here
VECTRA_API_VERSION=v2.3

# Optional: Rate limiting configuration
VECTRA_RATE_LIMIT_REQUESTS=100
VECTRA_RATE_LIMIT_PERIOD=60
VECTRA_REQUEST_TIMEOUT=30

# Optional: Logging configuration
VECTRA_LOG_FILE=vectra_mcp_server.log

# Optional: MCP Server Configuration
VECTRA_MCP_TRANSPORT=stdio
VECTRA_MCP_HOST=0.0.0.0
VECTRA_MCP_PORT=8000
VECTRA_MCP_DEBUG=false

# Ignore certificate validation
VECTRA_VERIFY_SSL=true